{% trans_default_domain 'FOSUserBundle' %}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><strong>{{ 'change_password.submit'|trans }}</strong></a>
    </div>

    <div class="box box-primary">
        <div class="login-box-body">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div class="form-group">
                    {% if invalid_username is defined %}
                        <div class="callout callout-danger"><p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p></div>
                    {% endif %}
                    <label for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input type="text" id="username" name="username" required="required" class="form-control" />
                </div>
                <div>
                    <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-warning btn-block" />
                </div>
            </form>
            <p></p>
            <div class="box-footer">
                <a href="{{ path('fos_user_security_login') }}">{{ 'back_to_login'|trans({},'general') }}</a>
            </div>
        </div>
    </div>
</div>

