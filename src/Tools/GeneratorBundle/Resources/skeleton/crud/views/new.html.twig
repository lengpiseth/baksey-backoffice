{{ "{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}" }}
{{ "{% block body_id '"~ document ~"' %}" }}

{{ "{% block content %}" }}
    <section class="content-header">
        <h1>{{ document }}</h1>
        <ol class="breadcrumb">
            <li><a href="{{ "{{ path('admin_dashboard') }}" }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li class="active">New</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-sm-9">
                <div class="box box-success">
                    <form action="{{ "{{ path('"~ route_name_prefix ~"_create') }}" }}" method="post" {{ "{{ form_enctype(form) }}" }}>
                        <div class="box-header">
                            <h3 class="box-title">Creation</h3>
                        </div>
                        <div class="box-body">
                            {{ "{{ form_widget(form) }}" }}
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-right">Create</button>
                        </div>
                    </form>
                    {% set hide_edit, hide_duplicate, hide_delete = true, true, true %}
                    {% include 'views/others/record_actions.html.twig' %}
                </div>
            </div>
        </div>
    </section>

{{ "{% endblock %}" }}