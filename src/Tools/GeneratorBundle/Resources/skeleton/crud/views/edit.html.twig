{{ "{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}" }}
{{ "{% block body_id '"~ document ~"' %}" }}

{{ "{% block content %}" }}
    <section class="content-header">
        <h1>{{ document }}</h1>
        <ol class="breadcrumb">
            <li><a href="{{ "{{ path('admin_dashboard') }}" }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li><a href="{{ "{{ path('admin_conference') }}" }}">{{ document }}</a></li>
            <li class="active">Document Name</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-sm-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Edit</h3>
                    </div>

                    <div class="box-body">
                        <form action="{{ "{{ path('"~ route_name_prefix ~"_update', { 'id': document.id }) }}" }}" method="post" {{ "{{ form_enctype(edit_form) }}" }}>
                            {{ "{{ form_widget(edit_form) }}" }}
                            <p>
                                <button type="submit">Edit</button>
                            </p>
                        </form>
                    </div>

                    <div class="box-footer">
                        {% set hide_edit, hide_duplicate, hide_delete = true, false, false %}
                        {% include 'views/others/record_actions.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{{ "{% endblock %}" }}